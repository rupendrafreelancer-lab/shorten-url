<!DOCTYPE html>
<html>
  <%- include('common/head') %>
  <body>
    <%- include('common/header') %>
    <main>
      <h2>Shorten Url</h2>
      <br />
      <% if(isCreated) { %>
      <p>Shorten url created with "<%= shortId %>"</p>
      <% } else { %>
      <form method="POST" action="/url">
        <label for="redirectURL">
          <span>Enter your original url</span>
          <input id="redirectURL" type="text" name="url" placeholder="http://example.com" />
        </label>
        <button type="submit">Submit</button>
      </form>
      <% } %> <% if(urls) { %>
      <table>
        <thead>
          <th>S.No.</th>
          <th>ShortId</th>
          <th>Redirect Url</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%- index %></td>
            <td><%- url.shortId %></td>
            <td><%- url.redirectURL %></td>
            <td><%- url.visithistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </main>
    <%- include('common/footer') %>
  </body>
</html>
